<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TransformAnimationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="变换动画"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XML实现"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_xml_alpha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onAlphaByXml"
                android:text="渐变透明度" />

            <Button
                android:id="@+id/btn_xml_rotate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onRotateByXml"
                android:text="旋转动画" />

            <Button
                android:id="@+id/btn_xml_scale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onScaleByXml"
                android:text="渐变尺寸缩放" />

            <Button
                android:id="@+id/btn_xml_translate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onTranslationByXml"
                android:text="位移" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Code实现"
                android:gravity="center"/>


            <Button
                android:id="@+id/btn_java_alpha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onAlphaByCode"
                android:text="渐变透明度" />

            <Button
                android:id="@+id/btn_java_rotate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onRotateByCode"
                android:text="旋转动画" />

            <Button
                android:id="@+id/btn_java_scale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onScaleByCode"
                android:text="渐变尺寸缩放" />

            <Button
                android:id="@+id/btn_java_translate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onTranslationByCode"
                android:text="位移" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_doraemo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:onClick="onComboAnimation"
            app:srcCompat="@mipmap/doraemo" />
    </LinearLayout>


</LinearLayout>